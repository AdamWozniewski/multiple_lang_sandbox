{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend - nodeJS",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev:css": "bunx @tailwindcss/cli -i ./src/tailwind.css -o ./public/main.css --watch",
    "build:css": "bunx @tailwindcss/cli -i ./src/tailwind.css -o ./public/main.css --minify",
    "dev:tsc": "bun --hot run src/index.ts",
    "build:tsc": "bun build src/index.ts --target bun --format esm --sourcemap --outfile dist/server.mjs",
    "start:prod": "bun dist/server.mjs",
    "biome:lint": "biome lint .",
    "biome:format": "biome format . --write",
    "biome:check": "biome check .",
    "biome:check:fix": "biome check . --fix",
    "biome:check:fix:unsafe": "biome check . --fix --unsafe",
    "old-lint": "eslint \"./{src, test}/*.{js,jsx,ts,tsx,json}\"",
    "old-lint:fix": "eslint --fix \"./{src, test}/**/*.{js,jsx,ts,tsx,json}\"",
    "prettier:check": "prettier --check \"views/**/*.{ejs,html,css,md,yml}\"",
    "prettier:format": "prettier --write \"views/**/*.{ejs,html,css,md,yml}\"",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org b2b-hs --project node-express ./dist && sentry-cli sourcemaps upload --org b2b-hs --project node-express ./dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "dotenv -e .env -- npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.1",
    "@libsql/client": "^0.14.0",
    "@sentry/bun": "^10.8.0",
    "@sentry/cli": "^2.39.1",
    "@sentry/esbuild-plugin": "^2.22.7",
    "@sentry/node": "^8.45.0",
    "@simplewebauthn/server": "^13.1.2",
    "@tailwindcss/cli": "^4.1.12",
    "@types/ejs": "^3.1.5",
    "@types/mongoose-unique-validator": "^1.0.9",
    "body-parser": "^2.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csrf-csrf": "^3.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^6.0.5",
    "helmet": "^8.0.0",
    "html-minifier-terser": "^7.2.0",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "install": "^0.13.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.0",
    "mongoose-unique-validator": "^4.0.1",
    "multer": "^1.4.5-lts.1",
    "newrelic": "^13.2.1",
    "nock": "^13.5.6",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "randomstring": "^1.3.0",
    "rate-limiter-flexible": "^5.0.4",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.1.12",
    "tsconfig-paths": "^4.2.0",
    "unplugin-auto-import": "^19.3.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.34.0",
    "@graphql-tools/schema": "^10.0.23",
    "@graphql-tools/utils": "^10.8.6",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/html-vite": "^9.1.3",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/bun": "^1.2.21",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.1",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/i18next": "^13.0.0",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "bcryptjs": "^3.0.2",
    "chromatic": "^13.1.4",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.28.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.34.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-storybook": "^9.1.3",
    "globals": "^15.13.0",
    "mongodb-memory-server": "^10.1.3",
    "start-server-and-test": "^2.0.8",
    "storybook": "^9.1.3",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "biome format --write",
      "biome check --fix --unsafe"
    ]
  },
  "author": "adamw",
  "license": "ISC"
}
