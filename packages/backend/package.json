{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend - nodeJS",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "dev:css": "postcss frontend/css/styles.css -o public/css/main.css --watch",
    "build:css": "env NODE_ENV=production postcss src/tailwind.css -o public/main.css",
    "build:vite": "vite build",
    "vite": "vite",
    "dev:tsc": "tsx watch --env-file=.env src/index.ts",
    "build:tsc": "etsc src -d dist",
    "start:prod": "node --require tsconfig-paths/register dist/index.js",
    "build": "etsc src -d dist",
    "build:ts": "tsc --project tsconfig.json && npm run sentry:sourcemaps",
    "biome": "npx @biomejs/biome check .",
    "biome:fix": "npx @biomejs/biome check --write .",
    "lint": "eslint \"./{src, test}/*.{js,jsx,ts,tsx,json}\"",
    "lint:fix": "eslint --fix \"./{src, test}/**/*.{js,jsx,ts,tsx,json}\"",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org b2b-hs --project node-express ./dist && sentry-cli sourcemaps upload --org b2b-hs --project node-express ./dist"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@libsql/client": "^0.14.0",
    "@sentry/cli": "^2.39.1",
    "@sentry/esbuild-plugin": "^2.22.7",
    "@sentry/node": "^8.45.0",
    "@sentry/profiling-node": "^8.45.0",
    "@types/ejs": "^3.1.5",
    "@types/mongoose-unique-validator": "^1.0.9",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csrf-csrf": "^3.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "graphql": "^16.10.0",
    "helmet": "^8.0.0",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "install": "^0.13.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.0",
    "mongoose-unique-validator": "^4.0.1",
    "multer": "^1.4.5-lts.1",
    "nock": "^13.5.6",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.13.1",
    "qrcode": "^1.5.4",
    "randomstring": "^1.3.0",
    "rate-limiter-flexible": "^5.0.4",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.1",
    "@types/i18next": "^13.0.0",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/pg": "^8.11.10",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "drizzle-kit": "^0.28.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "mongodb-memory-server": "^10.1.3",
    "start-server-and-test": "^2.0.8",
    "supertest": "^6.3.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "author": "adamw",
  "license": "ISC"
}
