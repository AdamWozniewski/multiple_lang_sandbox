<pre><%= JSON.stringify(form) %></pre>

<form method="POST" <% if(showFile) { %>enctype="multipart/form-data"<% } %>>
    <input type="hidden">
    <div class="form-group">
        <label for="">Nazwa</label>
        <input value="<%= form?.name %>" type="text" name="name"
               class="form-control <%- errors?.name ? 'is-invalid' : '' %> %>
            " id="" aria-describedby="emailHelp" placeholder="Nazwa">
        <small id="emailHelp" class="form-text text-muted">Przynajmniej 3 znaki</small>
        <% if(errors?.name) { %>
            <div class="invalid-feedback"><%= errors.name.message %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="">Slug</label>
        <input value="<%= form?.slug %>" type="text" name="slug"
               class="form-control <%- errors?.slug ? 'is-invalid' : '' %>"
               id="" placeholder="Slug">
        <% if(errors?.slug) { %>
            <div class="invalid-feedback"><%= errors.slug.message %></div>
        <% } %>
    </div>
    <% if(showFile) { %>
        <% if(form.image) { %>
            <div class="row">
                <div class="col">
                    <img src="/img/uploads/<%- form.image %>" alt="">
                    <a href="/admin/company/<%- form.slug %>/delete-img" class="btn btn-sm btn-danger">usuń zdjęcie</a>
                </div>
            </div>
        <% } %>
        <div class="mt-3 form-group">
            <label for="">Image</label>
            <input type="file" name="image" id="image" class="form-control">
        </div>
    <% } %>
    <div class="form-group">
        <label for="">Liczba pracowników</label>
        <input value="<%= form?.employeesCount %>" type="number" name="employeesCount" class="form-control" id="">
    </div>
    <button type="submit" class="btn btn-primary"><%- button %></button>
</form>