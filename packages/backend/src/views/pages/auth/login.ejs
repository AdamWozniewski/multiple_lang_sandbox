<h1>Logowanie</h1>
<form method="POST">
    <div class="form-group">
        <label for="">Email</label>
        <input required value="<%= form?.email %>" type="email" name="email" class="form-control" id=""
               aria-describedby="emailHelp" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="">Hasło</label>
        <input required value="<%= form?.password %>" type="password" name="password" class="form-control"
               id="" placeholder="Hasło">
    </div>
    <% if(errors) { %>
        <div class="alert alert-danger">Błędny login lub hasło</div>
    <% } %>
    <button type="submit" class="btn btn-primary">Zaloguj</button>
</form>