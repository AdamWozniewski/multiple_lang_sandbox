<h1>Edytuj profile</h1>
<form method="POST">
    <div class="form-group">
        <label for="">Email</label>
        <input value="<%= form?.email %>" type="email" name="email" disabled class="form-control <%- errors?.email ? 'is-invalid' : '' %>
            " id="" aria-describedby="emailHelp" placeholder="Emial">
        <% if(errors?.email) { %>
            <div class="invalid-feedback"><%= errors.email.message %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="">Hasło</label>
        <input value="<%= form?.password %>" type="password" name="password" class="form-control <%- errors?.password ? 'is-invalid' : '' %>"
               id="" placeholder="Hasło">
        <% if(errors?.password) { %>
            <div class="invalid-feedback"><%= errors.password.message %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="">Imie</label>
        <input value="<%= form?.firstName %>" type="text" name="firstName" class="form-control"
               id="" placeholder="Imię">
    </div>
    <div class="form-group">
        <label for="">Nazwisko</label>
        <input value="<%= form?.lastName %>" type="text" name="lastName" class="form-control"
               id="" placeholder="nazwisko">
    </div>
    <% if(errors) { %>
        <div class="alert alert-danger">Błędny login lub hasło</div>
    <% } %>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>