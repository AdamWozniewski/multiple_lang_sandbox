<h1>Reset hasła</h1>
<form method="POST" action="/<%= language %>/forgot-password">
    <div class="form-group">
        <label for="">Email</label>
        <input value="<%= form?.email %>" type="email" name="email" class="form-control <%- errors?.email ? 'is-invalid' : '' %>
            " id="" aria-describedby="emailHelp" placeholder="Emial">
        <% if(errors?.email) { %>
            <div class="invalid-feedback"><%= errors.email.message %></div>
        <% } %>
    </div>
    <% if(errors) { %>
        <div class="alert alert-danger">Cos poszło nie tak</div>
    <% } %>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>